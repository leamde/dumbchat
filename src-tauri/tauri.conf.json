{
  "identifier": "com.dumbchat.dev",
  "productName": "dumbchat",
  "version": "0.1.0",
  "app": {
    "windows": [
      {
        "title": "DumbChat",
        "width": 800,
        "height": 600,
        "label": "main"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "default",
          "description": "Default capability for DumbChat with filesystem write access",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            {
              "identifier": "fs:allow-write-file",
              "allow": [
                "$APPDATA/**"
              ]
            },
            {
              "identifier": "fs:allow-read-file",
              "allow": [
                "$APPDATA/**"
              ]
            }
          ]
        }
      ]
    },
    "withGlobalTauri": true
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": []
  }
}